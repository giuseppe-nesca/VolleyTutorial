<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:fillViewport="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nesca.giuseppe.volleytutorial.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:id="@+id/palleggioContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/yball"
                android:onClick="info" />

            <TextView
                android:id="@+id/welcomePalleggio"
                style="@style/titleStyle"
                android:text="@string/pallMainTitle" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/palleggiodrago" />

            <TextView
                android:id="@+id/introPalleggio"
                style="@style/spiegazioneStyle"
                android:text="@string/pallMAinSpiegazione" />

            <TextView
                android:id="@+id/inferioriTitPall"
                style="@style/subTitleStyle"
                android:text="@string/pallInferioriTitle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/palleggio" />

            <TextView
                android:id="@+id/inferioriSpiegazionePall"
                style="@style/spiegazioneStyle"
                android:text="@string/pallInferioriSpieg" />

            <TextView
                android:id="@+id/superioriTitPall"
                style="@style/subTitleStyle"
                android:text="@string/pallSuperioriTitle" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/angolo_gomiti" />

            <TextView
                android:id="@+id/superioriSpiegazionePall"
                style="@style/spiegazioneStyle"
                android:text="@string/pallSuperioriSpiegazione" />

            <TextView
                android:id="@+id/troncoTitoloPall"
                style="@style/subTitleStyle"
                android:text="@string/pallTroncoTitle" />

            <TextView
                android:id="@+id/troncoSpiegazionePall"
                style="@style/spiegazioneStyle"
                android:text="@string/pallTroncoSpiegazione" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:fillViewport="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nesca.giuseppe.volleytutorial.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:id="@+id/spikeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/yball"
                android:onClick="info" />


            <TextView
                android:id="@+id/welcomeText"
                style="@style/titleStyle"
                android:text="@string/att" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/spiketit" />

            <TextView
                android:id="@+id/welcomeText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-small"
                android:text="@string/att_info1"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/saltoTitle"
                style="@style/subTitleStyle"
                android:text="@string/salt" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/spike_approach" />

            <TextView
                android:id="@+id/welcomeText3"
                style="@style/spiegazioneStyle"
                android:text="@string/att_info2"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/welcomeText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-small"
                android:text="@string/salto"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bracciosteso" />

            <TextView
                android:id="@+id/movManT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="@string/movMan"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/manoavvolgente" />

            <TextView
                android:id="@+id/movManS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-small"
                android:text="@string/movManS"
                android:textColor="@android:color/black"
                android:textSize="25sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
